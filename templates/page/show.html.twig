{% extends 'base.html.twig' %}

{% block title %}Pages{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{asset('styles/pages.css')}}">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
{% endblock %}

{% block body %}


{{ page.content | raw}}

<div class="AjoutArticle">
  <h1>Listes des articles</h1>
  <button><a href="{{path("app_article_new")}}">Ajouter un article</a></button>
</div>

<div class="row">
  {% for article in articles %}
    <div class="col-sm-3">
      <div class="card">
        <div class="card-body">
          <h5 class="card-title">{{article.title}}</h5>
          <p class="card-text">{{article.content}}</p>
          <a href="{{ path('app_article_show', {'seourl': article.seourl}) }}" class="btn btn-primary">Voir plus</a>
        </div>
      </div>
    </div>
  {% endfor %}
</div>

{% endblock %}