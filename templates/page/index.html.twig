{% extends 'base.html.twig' %}

{% block title %}Liste des Pages{% endblock %}
    
{% block stylesheets %}
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
{% endblock %}

{% block body %}

        <h1 class="my-4 text-center">Liste des Pages</h1>
        
        <div class="row">
            {% for page in pages %}
                <div class="col-md-4">
                    <div class="card mb-4 shadow-sm">
                        <div class="card-body">
                            <h5 class="card-title">{{ page.title }}</h5>
                            <p class="card-text">{{ page.metaDescription }}</p>
                            <a href="{{ path('app_page_show', {'seourl': page.seourl}) }}" class="btn btn-primary">Voir plus</a>
                        </div>
                    </div>
                </div>
            {% else %}
                <p>Aucune page trouv√©e.</p>
            {% endfor %}
        </div>

{% endblock %}
